{
  "name": "New Tab Page",
  "version": "1.0.5",
  "manifest_version": 2,
  "description": "A new tab page for Chrome",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "tabs"
  ],
  "web_accessible_resources": [
    "js/jquery.min.map",
    "images/*.png"
  ]
}